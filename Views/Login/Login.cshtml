@using QShop.Models.ViewModel
@using QShop.Models.ViewModel.Login
@model LoginViewModel

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background-image: url('https://wallpaperaccess.com/full/2374151.jpg');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        padding: 20px;
    }

    .login-container {
        width: 100%;
        max-width: 420px;
    }

    .login-box {
        background: rgba(255, 255, 255, 0.25);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        padding: 40px;
        border-radius: 24px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.18);
    }

    .login-header {
        text-align: center;
        margin-bottom: 32px;
    }

    .logo {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        margin-bottom: 24px;
    }

    .logo-circle {
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, #FF9800 0%, #F57C00 100%);
        border-radius: 12px;
        position: relative;
        overflow: hidden;
    }

        .logo-circle::after {
            content: '';
            position: absolute;
            width: 24px;
            height: 24px;
            background: white;
            border-radius: 50%;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

    .logo-text {
        font-size: 24px;
        font-weight: 700;
        background: linear-gradient(135deg, #FF9800 0%, #F57C00 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .login-header h1 {
        font-size: 24px;
        color: #333333;
        margin-bottom: 8px;
        text-shadow: 0 1px 2px rgba(255, 255, 255, 0.3);
    }

    .login-header p {
        color: #333333;
        font-size: 16px;
        text-shadow: 0 1px 1px rgba(255, 255, 255, 0.3);
    }

    .login-form {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: 6px;
    }

        .form-group label {
            color: #333333;
            font-size: 14px;
            font-weight: 600;
            text-shadow: 0 1px 1px rgba(255, 255, 255, 0.3);
        }

    .input-with-icon {
        position: relative;
    }

    .icon {
        position: absolute;
        left: 16px;
        top: 50%;
        transform: translateY(-50%);
        width: 20px;
        height: 20px;
        color: #666666;
        z-index: 1;
    }

    input {
        width: 100%;
        padding: 12px 16px 12px 48px;
        background-color: rgba(255, 255, 255, 0.7);
        border: 1px solid rgba(255, 255, 255, 0.5);
        border-radius: 12px;
        font-size: 16px;
        transition: all 0.3s ease;
        color: #333333;
        backdrop-filter: blur(5px);
        -webkit-backdrop-filter: blur(5px);
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
    }

        input:focus {
            border-color: #FF9800;
            outline: none;
            box-shadow: 0 0 0 3px rgba(255, 152, 0, 0.2);
            background-color: rgba(255, 255, 255, 0.9);
        }

        input::placeholder {
            color: #666666;
        }

    .submit-btn {
        background: rgba(255, 152, 0, 0.9);
        color: white;
        padding: 14px 24px;
        border: none;
        border-radius: 12px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        backdrop-filter: blur(5px);
        -webkit-backdrop-filter: blur(5px);
        box-shadow: 0 4px 15px rgba(255, 152, 0, 0.2);
    }

        .submit-btn:hover {
            background-color: rgba(245, 124, 0, 0.95);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(255, 152, 0, 0.3);
        }

    .arrow-icon {
        width: 20px;
        height: 20px;
        transition: transform 0.3s ease;
    }

    .submit-btn:hover .arrow-icon {
        transform: translateX(4px);
    }

    .signup-prompt {
        text-align: center;
        color: #333333;
        font-size: 14px;
        text-shadow: 0 1px 1px rgba(255, 255, 255, 0.3);
    }

    .signup-link {
        color: #FF9800;
        text-decoration: none;
        font-weight: 600;
        transition: color 0.3s ease;
    }

        .signup-link:hover {
            color: #F57C00;
        }

    .error-message {
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 12px 16px;
        background: rgba(254, 242, 242, 0.7);
        border: 1px solid rgba(252, 165, 165, 0.5);
        border-radius: 12px;
        color: #DC2626;
        font-size: 14px;
        backdrop-filter: blur(5px);
        -webkit-backdrop-filter: blur(5px);
    }

    .error-icon {
        width: 20px;
        height: 20px;
        color: #DC2626;
    }

    button {
        background: rgba(255, 255, 255, 0.3);
        color: #333333;
        border: 1px solid rgba(255, 255, 255, 0.5);
        padding: 14px 24px;
        border-radius: 12px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        width: 100%;
        backdrop-filter: blur(5px);
        -webkit-backdrop-filter: blur(5px);
    }

        button:hover {
            background-color: rgba(255, 255, 255, 0.5);
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

    @@media (max-width: 480px) {
        .login-box

    {
        padding: 24px;
        border-radius: 16px;
    }

    .login-header h1 {
        font-size: 20px;
    }

    .login-header p {
        font-size: 14px;
    }

    input {
        padding: 10px 16px 10px 44px;
        font-size: 14px;
    }

    .submit-btn {
        padding: 12px 20px;
        font-size: 14px;
    }

    }
</style>

<div class="login-container">
    <div class="login-box">
        <div class="login-header">
            <div class="logo">
                <div class="logo-circle"></div>
                <div class="logo-text">QShop</div>
            </div>
            <h1>Welcome Back</h1>
            <p>Please enter your details to sign in</p>
        </div>

        <form class="login-form" asp-action="Login" method="post">
            <div class="form-group">
                <label for="email">Email</label>
                <div class="input-with-icon">
                    <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M22 6c0-1.1-.9-2-2-2H4c-1.1 0-2 .9-2 2m20 0v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6m20 0l-10 7-10-7" />
                    </svg>
                    <input type="email" id="email" asp-for="Email" placeholder="Enter your email" required>
                </div>
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <div class="input-with-icon">
                    <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="3" y="11" width="18" height="11" rx="2" ry="2" />
                        <path d="M7 11V7a5 5 0 0110 0v4" />
                    </svg>
                    <input type="password" id="password" asp-for="Password" placeholder="Enter your password" required>
                </div>
            </div>

            @if (ViewData["Error"] != null)
            {
                <div class="error-message">
                    <svg class="error-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10" />
                        <line x1="12" y1="8" x2="12" y2="12" />
                        <line x1="12" y1="16" x2="12" y2="16" />
                    </svg>
                    <span>@ViewData["Error"]</span>
                </div>
            }

            <button type="submit" class="submit-btn">
                Sign In
                <svg class="arrow-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="5" y1="12" x2="19" y2="12" />
                    <polyline points="12 5 19 12 12 19" />
                </svg>
            </button>

            <a asp-controller="Login" asp-action="CustomerRegister">
                <button type="button">Create an account</button>
            </a>
        </form>
    </div>
</div>