@{
}

<table>
    <tr>
        <th>Order ID</th>
        <th>Status</th>
        <th>Actions</th>
    </tr>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.OrderId</td>
            <td>@order.Status</td>
            <td><a href="@Url.Action("UpdateStatus", "Admin", new { id = order.OrderId })">Update</a></td>
        </tr>
    }
</table>
