<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            display: flex;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            background: #343a40;
            color: white;
            padding: 15px;
            position: fixed;
        }

            .sidebar a {
                color: white;
                text-decoration: none;
                display: block;
                padding: 10px;
                margin: 5px 0;
            }

                .sidebar a:hover {
                    background: #495057;
                }

        .content {
            margin-left: 260px;
            padding: 20px;
            width: 100%;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <h3>Admin Panel</h3>
        <a href="@Url.Action("Dashboard", "Admin")">Dashboard</a>
        <a href="@Url.Action("ManageUsers", "Admin")">Manage Users</a>
        <a href="@Url.Action("ManageStores", "Admin")">Manage Stores</a>
        <a href="@Url.Action("ManageOrders", "Admin")">Manage Orders</a>
        <a href="@Url.Action("Reports", "Admin")">Reports</a>
        <a href="@Url.Action("Settings", "Admin")">Settings</a>
        <a href="@Url.Action("Logout", "Admin")">Logout</a>
    </div>

    <!-- Main Content -->
    <div class="content">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
