@using QShop.Models.ViewModel.NewFolder
@model List<ProductView>

<h2>Product List</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Stock Quantity</th>
            <th>Area ID</th>
            <th>Category ID</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.Price</td>
                <td>@product.StockQuantity</td>
                <td>@product.AreaId</td>
                <td>@product.CategoryId</td>
                <td>
                    <img src="@product.PImage" width="100" height="100" />
                </td>
            </tr>
        }
    </tbody>
</table>
