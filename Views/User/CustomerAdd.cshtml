        height: 24px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.9rem;
    }

    .right-panel {
        flex: 1;
        padding: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #fff;
    }

    .registration-form {
        width: 100%;
        max-width: 400px;
    }

