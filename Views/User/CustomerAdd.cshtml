@model QShop.Models.ViewModel.CustomerViewModel

<div class="main-container">
    <div class="left-panel">
        <div class="brand-content">
            <h1>Welcome to Qshop</h1>
            <p>Join thousands of happy customers today!</p>
            <div class="features">
                <div class="feature-item">
                    <span class="checkmark">✓</span>
                    <span>Exclusive Deals</span>
                </div>
                <div class="feature-item">
                    <span class="checkmark">✓</span>
                    <span>Fast Delivery</span>
                </div>
                <div class="feature-item">
                    <span class="checkmark">✓</span>
                    <span>24/7 Support</span>
                </div>
            </div>
        </div>
    </div>

    <div class="right-panel">
        <form class="registration-form" asp-action="CustomerAdd" method="post">
            <h2>Create Account</h2>

            <div class="form-fields">
                <div class="form-group">
                    <input type="text" asp-for="Name" required />
                    <label>Full Name</label>
                    <span asp-validation-for="Name" class="error"></span>
                </div>

                <div class="form-group">
                    <input type="email" asp-for="Email" required />
                    <label>Email Address</label>
                    <span asp-validation-for="Email" class="error"></span>
                </div>

                <div class="form-group">
                    <input type="text" asp-for="Phone" required />
                    <label>Phone Number</label>
                    <span asp-validation-for="Phone" class="error"></span>
                </div>

                <div class="form-group">
                    <input type="text" asp-for="Address" required />
                    <label>Address</label>
                    <span asp-validation-for="Address" class="error"></span>
                </div>

                <div class="form-group">
                    <select name="AreaId" required>
                        <option value="">Select Your Area</option>
                        @foreach (var area in ViewBag.Areas)
                        {
                            <option value="@area.AreaId">@area.AreaName</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <input type="password" asp-for="Password" required />
                    <label>Password</label>
                    <span asp-validation-for="Password" class="error"></span>
                </div>
            </div>

            <button type="submit">Get Started</button>
            <div class="registration-options">
                <p class="options-divider">or</p>
                <p class="supplier-prompt">Are you a business owner?</p>
                <a asp-action="Add" asp-controller="User" class="supplier-link">
                    Register as Supplier
                    <svg class="arrow-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="5" y1="12" x2="19" y2="12"></line>
                        <polyline points="12 5 19 12 12 19"></polyline>
                    </svg>
                </a>
            </div>

        </form>
    </div>
</div>

