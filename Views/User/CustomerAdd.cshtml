    .brand-content {
        position: relative;
        z-index: 1;
        max-width: 400px;
    }

        .brand-content h1 {
            font-size: 2.5rem;
            margin-bottom: 1rem;
            font-weight: 700;
        }

        .brand-content p {
            font-size: 1.1rem;
            margin-bottom: 2rem;
            opacity: 0.9;
        }

    .features {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .feature-item {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-size: 1.1rem;
    }

    .checkmark {
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
