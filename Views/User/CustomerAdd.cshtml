            font-size: 1.75rem;
            margin-bottom: 2rem;
            color: #333;
            text-align: center;
        }

    .form-fields {
        display: flex;
        flex-direction: column;
        gap: 1.25rem;
    }

    .form-group {
        position: relative;
    }

        .form-group input,
        .form-group select {
            width: 100%;
            padding: 12px 16px;
            border: 2px solid #e1e1e1;
            border-radius: 12px;
            font-size: 1rem;
            transition: all 0.3s;
            background: white;
        }

        .form-group label {
            position: absolute;
            left: 16px;
            top: 50%;
            transform: translateY(-50%);
            background: white;
            padding: 0 4px;
            color: #666;
            transition: all 0.3s;
            pointer-events: none;
        }

        .form-group input:focus,
        .form-group select:focus {
            border-color: #4ECDC4;
            outline: none;
        }

            .form-group input:focus + label,
            .form-group input:not(:placeholder-shown) + label {
                top: 0;
                font-size: 0.85rem;
                color: #4ECDC4;
            }

    .error {
        color: #FF6B6B;
        font-size: 0.85rem;
        margin-top: 4px;
        display: block;
    }

    button {
        width: 100%;
        padding: 16px;
        margin-top: 2rem;
        background: linear-gradient(45deg, #FF6B6B, #4ECDC4);
        color: white;
        border: none;
        border-radius: 12px;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        transition: transform 0.3s, box-shadow 0.3s;
    }

        button:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(78, 205, 196, 0.3);
        }

    @@media (max-width: 768px) {
        .main-container

    {
        flex-direction: column;
    }

    .left-panel {
        padding: 40px 20px;
    }

    .right-panel {
        padding: 40px 20px;
    }

    .brand-content h1 {
        font-size: 2rem;
    }

    }

    .registration-options {
        margin-top: 24px;
        text-align: center;
        position: relative;
        padding-top: 20px;
    }

    .options-divider {
        background-color: #fff;
        padding: 0 10px;
        color: #6B7280;
        font-size: 14px;
        position: relative;
        display: inline-block;
        margin-bottom: 15px;
    }

        .options-divider::before {
            content: "";
            position: absolute;
            top: 50%;
            left: -50px;
            right: -50px;
            height: 1px;
            background-color: #e5e7eb;
            z-index: -1;
        }

    .supplier-prompt {
        color: #4B5563;
        font-size: 14px;
        margin-bottom: 8px;
    }

    .supplier-link {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 8px 16px;
        background-color: #f3f4f6;
        color: #4F46E5;
        text-decoration: none;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 500;
        transition: all 0.2s ease;
    }

        .supplier-link:hover {
            background-color: #e5e7eb;
            transform: translateY(-1px);
        }

    .arrow-icon {
        width: 16px;
        height: 16px;
        transition: transform 0.2s ease;
    }

    .supplier-link:hover .arrow-icon {
        transform: translateX(4px);
    }
